<div class="row">
    <div class="container panel panel-default">

        <h2 class="col-xs-6">{{ heading }}</h2>
        <p class="col-xs-6 text-right"><a href="movies/new">Add New</a></p>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Director</th>
                    <th>Year</th>
                    <th>My Rating</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each movies}}
                    <tr>
                        <td><img class="poster-thumb" src="{{poster_url}}" alt=""></td>
                        <td><a href="/movies/{{this.id}}">{{title}}</a></td>
                        <td>{{director}}</td>
                        <td>{{year}}</td>
                        <td>{{my_rating}}</td>
                        <td>Edit</td>
                        <td>Delete</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</div>
